<Window x:Class="LifeAtNik.FightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeAtNik"
        mc:Ignorable="d"
        Title="FightWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Content="kérdés" x:Name="q" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Tárgy" Grid.Row="0" Grid.Column="0" />
        <Button x:Name="bt_q1" Click="Check" Content="majd" Grid.Row="1" Grid.Column="0" Tag="1"/>
        <Button x:Name="bt_q2" Click="Check" Content="majd" Grid.Row="1" Grid.Column="1" Tag="2"/>
        <Button x:Name="bt_q3" Click="Check" Content="majd" Grid.Row="2" Grid.Column="0" Tag="3"/>
        <Button x:Name="bt_q4" Click="Check" Content="majd" Grid.Row="2" Grid.Column="1" Tag="4"/>
    </Grid>
</Window>
